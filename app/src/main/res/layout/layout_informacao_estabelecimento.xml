<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background_info"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Informações do Estabelecimento"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/CorTudo"
        android:orientation="horizontal"
        android:padding="5dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iconEstabelecimentoInfo"
            android:layout_width="68dp"
            android:layout_height="73dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_restaurante_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04000002"
            app:riv_corner_radius="10dp" />

        <TextView
            android:id="@+id/nomeEstabelecimentoInfo"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Nome do Estabelecimento"
            android:textColor="#4682B4"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconEstabelecimentoInfo"
            app:layout_constraintVertical_bias="0.060000002" />

        <TextView
            android:id="@+id/enderecoEstabelecimentoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="300dp"
            android:text="Endereço"
            android:textColor="#4682B4"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/textview1234"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomeEstabelecimentoInfo"
            app:layout_constraintVertical_bias="0.41000003" />

        <TextView
            android:id="@+id/textview1234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Tamanho estabelecimento:"
            android:textColor="#4682B4"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tamanhoEstabelecimentoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textview1234"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/textview1234"
            app:layout_constraintTop_toTopOf="@+id/textview1234" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/botaoAtualizar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorWhite"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_atualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="10dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical">


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="412dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="844dp"
                    android:layout_height="120dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/botaoDenuncia"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/circulo_lupa"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_reportar_erro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="10dp" />

                    <TextView
                        android:id="@+id/textViewVistoFeedBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Ultima atualização:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/seek_bar_inf_atual"
                        app:layout_constraintHorizontal_bias="0.86"
                        app:layout_constraintStart_toStartOf="@+id/seek_bar_inf_atual"
                        app:layout_constraintTop_toBottomOf="@+id/seek_bar_inf_atual" />

                    <LinearLayout
                        android:id="@+id/seek_bar_inf_atual"
                        android:layout_width="322dp"
                        android:layout_height="15dp"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/seek_bar_nenhum"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textViewMovimentoAtual">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Movimentação"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewMediaHoje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Média da movimentação de hoje"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline2"
                        app:layout_constraintTop_toTopOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/textViewMovimentoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Cheio!"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/textViewMediaHoje"
                        app:layout_constraintStart_toStartOf="@+id/textViewMediaHoje"
                        app:layout_constraintTop_toBottomOf="@+id/textViewMediaHoje" />

                    <TextView
                        android:id="@+id/textViewMovimentoAtual"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Movimentado"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/textView2"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <LinearLayout
                        android:id="@+id/seek_bar_informacao"
                        android:layout_width="322dp"
                        android:layout_height="15dp"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/seek_bar"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="@+id/textViewMediaHoje"
                        app:layout_constraintStart_toStartOf="@+id/textViewMediaHoje"
                        app:layout_constraintTop_toBottomOf="@+id/textViewMovimentoInfo">

                    </LinearLayout>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/textViewNumeroDeFeedBacks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero de FeedBacks Analisados:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/seek_bar_informacao"
                        app:layout_constraintTop_toBottomOf="@+id/seek_bar_informacao" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Araste para o lado para mais Informações >>>"
            android:textColor="@color/places_autocomplete_search_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <!--
       <SeekBar
            android:id="@+id/seekBarInfo"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:backgroundTint="@color/black"
            android:max="3"
            android:progress="2"
            android:progressDrawable="@drawable/seek_bar"
            android:thumb="@drawable/thumb_seek_bar"
            android:scrollbarStyle="insideInset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMovimentoInfo"
            app:layout_constraintVertical_bias="0.0" />
            -->
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>